<section id="user_score" class="col-md-6 col-md-offset-3">
	<p class="lead"><img class="profile-photo"src="<%= image(@user) %>"><em><a href="https://twitter.com/<%=@user.user%>" target="_blank"><strong>@<%= @user.user %></strong></a> is <%= @mood %> tweeter with a score of</em></p>
	<h1 id="score"><%= @user.score %></h1>

	
		<button class="btn btn-primary btn-lg twitter-share">
            <a class="popup" href="http://twitter.com/share?text=.@<%= @user.user %>%20is%20<%= @mood %>%20tweeter%20with%20a%20score%20of%20<%= @user.score %>!%20What's%20your%20Twitter%20mood?%20%23chirpscore%20">Tweet It</a>
        </button>
	
</section>

<script>
  $('.popup').click(function(event) {
    var width  = 575,
        height = 400,
        left   = ($(window).width()  - width)  / 2,
        top    = ($(window).height() - height) / 2,
        url    = this.href,
        opts   = 'status=1' +
                 ',width='  + width  +
                 ',height=' + height +
                 ',top='    + top    +
                 ',left='   + left;
    
    window.open(url, 'twitter', opts);
 
    return false;
  });
</script>
